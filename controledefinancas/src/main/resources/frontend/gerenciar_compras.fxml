<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.esther.controledefinancas.frontend.controllers.GerenciarComprasController" hgap="10" vgap="10" alignment="CENTER">
    <!-- Descrição -->
    <Label text="Descrição da Compra:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="descricaoField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <!-- Valor -->
    <Label text="Valor:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="valorField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <!-- Forma de Pagamento -->
    <Label text="Forma de Pagamento:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <ComboBox fx:id="formaPagamentoComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <!-- Parcelado -->
    <Label text="Parcelado:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <CheckBox fx:id="parceladoCheckBox" GridPane.rowIndex="3" GridPane.columnIndex="1" />

    <!-- Quantidade de Parcelas -->
    <Label text="Quantidade de Parcelas:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <TextField fx:id="parcelasField" GridPane.rowIndex="4" GridPane.columnIndex="1" />

    <!-- Conta -->
    <Label text="Conta:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
    <ComboBox fx:id="contaComboBox" GridPane.rowIndex="5" GridPane.columnIndex="1" />

    <!-- Cartão -->
    <Label text="Cartão:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
    <ComboBox fx:id="cartaoComboBox" GridPane.rowIndex="6" GridPane.columnIndex="1" />

    <!-- Botão Salvar -->
    <Button text="Salvar" onAction="#salvarCompra" GridPane.rowIndex="7" GridPane.columnIndex="1" />
</GridPane>
